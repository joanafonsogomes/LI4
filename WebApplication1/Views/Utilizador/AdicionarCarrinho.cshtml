@model WebApplication1.Models.VendaInfo

@{
    ViewBag.Title = "AdicionarCarrinho";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";

    string str = (string)@ViewData["User_Name"];
}


<head>
    @section NotId {
        <li>
            <a href="@Url.Action("AluguerInfo", "Utilizador")">
                <span class="glyphicon glyphicon-bell "></span>
                Notificações
                @{
                    int n = (int)@ViewData["noti"];
                    if (n > 0)
                    {
                        <span class="badge" style="background-color: #138AB2">@n</span>
                    }
                }
            </a>
        </li>
    }
    <style>
        .newArtB:hover {
            color: white;
            background-color: #3094FF;
        }

        .newArtB:hover, newArtB:active {
            font-size: 130%;
        }

        html * {
            font-family: Montserrat;
        }
    </style>

</head>
<br />
<center>
    <div style="color:#555555; font-size:16px; font-weight:bold;">
        <b>O produto foi adicionado ao seu carrinho</b>
    </div>
</center>
<br />

<table class="table">
    <tr>
        <th style="text-align:center; vertical-align:middle">
            Nome
        </th>
        <th style="text-align:center; vertical-align:middle">
            Quantidade
        </th>
        <th style="text-align: center; vertical-align: middle">
            @Html.DisplayNameFor(model => model.Preco) <b> (€)</b>
        </th>
        <th style="text-align: center; vertical-align: middle">
            Foto do Artigo
        </th>


    </tr>

    <tr>
        <td style="text-align:center; vertical-align:middle; font-weight:bold">
            @{String nome = Model.NomeArtigo;
                Console.Write("olhonome:" + nome); }
            <a href="@Url.Action("Details", "Utilizador", new { idArtigo = Model.IdArtigo })"> @nome </a>
        </td>
        <td style="text-align:center; vertical-align:middle">
            @Html.DisplayFor(modelItem => Model.Quantidade)
        </td>
        <td style="text-align:center; vertical-align:middle">
            @Html.DisplayFor(modelItem => Model.Preco)
        </td>
        <td style="width:250px; height:250px; text-align:center; vertical-align:middle">
            <div class="w3-content w3-display-container">

                @{var fileName = @Model.Imagem;
                    String[] words = fileName.Split(" ");
                    String itempic = words[0];
                }
                <img class="card-img-top" src="~/uploads/@itempic" alt="" style="max-width:250px ; max-height:250px">

            </div>
        </td>
    </tr>

</table>

<p></p>
<p></p>
<button class="btn btn-login-large newArtB" style="font-weight: 700; font-family: 'Montserrat', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol', 'Noto Color Emoji'; border-color: rgb(17, 112, 158); margin:0 auto; display:block; font-size:10px">
    @Html.ActionLink("Ver Carrinho", "VendaInfo", "Utilizador", new { idVenda = Model.IdVenda }, null)
</button>
<p></p>
<button class="btn btn-login-large newArtB" style="font-weight: 700; font-family: 'Montserrat', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol', 'Noto Color Emoji'; border-color: rgb(17, 112, 158); margin:0 auto; display:block; font-size:10px">
    @Html.ActionLink("Continuar a comprar", "Details", "Utilizador", new { idArtigo = Model.IdArtigo }, null)
</button>
