@model WebApplication1.Models.Artigo
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>Details</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <add key="UnobtrusiveJavaScriptEnabled" value="true" />
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>

    <style>
        * {
            box-sizing: border-box;
        }

        html,
        body {
            height: 100%;
        }

        body {
            background: #F4F2F3;
            display: flex;
            flex-direction: column;
        }

        label {
            cursor: pointer;
        }

        svg {
            width: 3rem;
            height: 3rem;
            padding: 0.15rem;
        }


        /* hide radio buttons */

        input[name="star"] {
            display: inline-block;
            width: 0;
            opacity: 0;
            margin-left: -2px;
        }

        /* hide source svg */

        .star-source {
            width: 0;
            height: 0;
            visibility: hidden;
        }


        /* set initial color to transparent so fill is empty*/

        .star {
            color: transparent;
            transition: color 0.2s ease-in-out;
        }


        /* set direction to row-reverse so 5th star is at the end and ~ can be used to fill all sibling stars that precede last starred element*/

        .star-container {
            display: flex;
            flex-direction: row-reverse;
            position: absolute;
        }

        label:hover ~ label .star,
        svg.star:hover,
        input[name="star"]:focus ~ label .star,
        input[name="star"]:checked ~ label .star {
            color: #24AEFF;
        }

        input[name="star"]:checked + label .star {
            animation: starred 0.5s;
        }

        input[name="star"]:checked + label {
            animation: scaleup 1s;
        }
    </style>

</head>

<body>
    <!-- Page Content -->
    <div class="container">


        <div class="row">

            <div class="col-lg-9">


                <div class="card mt-4">
                    <!--<img class="card-img-top img-fluid" src="~/uploads/@Html.DisplayFor(modelItem => Model.Imagem)" alt="">-->
                    <div class="w3-content w3-display-container">
                        @{var fileName = Model.Imagem;
                            var idd = Model.IdArtigo;
                            string[] words = fileName.Split(" ");

                            int i = 1;

                            int count = words.Length();

                            Console.WriteLine(count);

                            foreach (string s in words)
                            {
                                <center>
                                    <img class="mySlides-@idd" src="~/uploads/@s" style="max-width:250px ; max-height:250px ; display: none" />
                                </center>
                                if (i == count)
                                {
                                    break;
                                }
                                i++;
                            }
                            string slides = "mySlides-" + idd;
                            var cenas = slides;
                            string scr = "script-" + idd;
                            var scri = scr;

                            if (words.Length() > 1)
                            {
                                <center>
                                    <button class="w3-button w3-black w3-display-left" onclick="plusDivs(-1)">&#10094;</button>
                                    <button class="w3-button w3-black w3-display-right" onclick="plusDivs(1)">&#10095;</button>
                                </center>
                            }

                            <script name="script-@idd" type="text/javascript">
                        var slideIndex = 1;
                        showDivs(slideIndex);

                        function plusDivs(n,) {
                        showDivs(slideIndex += n);
                         }

                        function showDivs(n) {
                            var i;
                            var x = document.getElementsByClassName("@cenas");
                            if (n > x.length) { slideIndex = 1 }
                            if (n < 1) { slideIndex = x.length }
                            for (i = 0; i < x.length; i++) {
                                x[i].style.display = "none";
                            }
                            x[slideIndex - 1].style.display = "block";
                            }


                            </script>

                        }
                    </div>
                    <div class="card-body">
                        <h3 class="card-title">@Html.DisplayFor(modelItem => Model.Nome)</h3>
                        <h4>@Html.DisplayFor(modelItem => Model.Preco) €</h4>
                        <h5>@Html.DisplayFor(modelItem => Model.Modo)</h5>
                        @if (Model.Modo.Equals("aluguer"))
                        {

                            <form asp-action="Details" asp-controllers="Utilizador" method="POST" enctype="multipart/form-data">

                                <!-- <form action="/action_page.php"> -->
                                <div class="form-group">
                                    <label for="birthday">De:</label>
                                    <input type="date" id="inicio" name="inicio">
                                </div>
                                <div class="form-group">
                                    <label for="birthday">Até:</label>
                                    <input type="date" id="fim" name="fim">
                                </div>
                                <div class="form-group">
                                    <input class="btn border-success btn-login btn-outline-primary" type="submit" value="Verificar Disponibiliade">
                                </div>



                                <script>
                                    document.getElementById("file").multiple = true;
                                </script>

                            </form>


                        }
                        @if (Model.Modo.Equals("venda"))
                        {
                            <a href="@Url.Action("AdicionarCarrinho", new { idArtigo = Model.IdArtigo })"
                               class="btn border-success btn-login btn-outline-primary">Adicionar ao Carrinho</a>
                        }

                    </div>
                </div>
                
                
                }
                <!--STAR PONTUATION-->
                <div class="card card-outline-secondary my-4">
                    <div class="card-header">
                        Avalie a sua satisfação com o produto
                    </div>
                    <div class="card-body" style="background-color:#F4F2F3">
                        <div class="star-source">
                            <svg>
                                <linearGradient x1="50%" y1="5.41294643%" x2="87.5527344%" y2="65.4921875%" id="grad">
                                    <stop stop-color="#4FBEFF" offset="0%"></stop>
                                    <stop stop-color="#24AEFF" offset="60%"></stop>
                                    <stop stop-color="#1D90D3" offset="100%"></stop>
                                </linearGradient>
                                <symbol id="star" viewBox="153 89 106 108">
                                    <polygon id="star-shape" stroke="url(#grad)" stroke-width="5" fill="currentColor" points="206 162.5 176.610737 185.45085 189.356511 150.407797 158.447174 129.54915 195.713758 130.842203 206 95 216.286242 130.842203 253.552826 129.54915 222.643489 150.407797 235.389263 185.45085"></polygon>
                                </symbol>
                            </svg>

                        </div>
                        <div class="star-container">
                            <input type="radio" name="star" id="five" value="FiveStars" onclick="location.href='@Url.Action("FiveStars", "Utilizador", new { IdArtigo = Model.IdArtigo })'">
                            <label for="five">
                                <svg class="star">
                                    <use xlink:href="#star" />
                                </svg>
                            </label>
                            <input type="radio" name="star" id="four">
                            <label for="four">
                                <svg class="star">
                                    <use xlink:href="#star" />
                                </svg>
                            </label>
                            <input type="radio" name="star" id="three">
                            <label for="three">
                                <svg class="star">
                                    <use xlink:href="#star" />
                                </svg>
                            </label>
                            <input type="radio" name="star" id="two">
                            <label for="two">
                                <svg class="star">
                                    <use xlink:href="#star" />
                                </svg>
                            </label>
                            <input type="radio" name="star" id="one">
                            <label for="one">
                                <svg class="star">
                                    <use xlink:href="#star" />
                                </svg>
                            </label>

                        </div>
                        <br />
                        <br />
                    </div>
                </div>
                <!--.................-->
                <!--PRODUCT REVIEWS -->

                <div class="card card-outline-secondary my-4">
                    <div class="card-header">
                        Product Reviews
                    </div>
                    <div class="card-body">
                        @foreach (var item in Model.Comentarios)
                                                {
                        <p>@Html.DisplayFor(itemModel => item.Descricao)</p>
                        <small class="text-muted">Posted by @Html.DisplayFor(itemModel => item.IdUtilizador)</small>
                        <hr>
                                                }
                    </div>
                </div>

                <form asp-action="AddComentario" asp-controllers="Utilizador" method="POST" enctype="multipart/form-data">

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true)
                        <div>
                            <label for="Descricao"></label>
                            <div>
                                <input id="Descricao" name="Descricao" type="text" class="form-control" placeholder="Deixe o seu comentário" required="">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="IdArtigo"></label>
                            <div>
                                <input type="hidden" name="IdArtigo" value="@Model.IdArtigo" />
                            </div>
                        </div>

                        <center>
                            <div class="form-group">
                                <div>
                                    <input type="submit" value="Post Review" class="btn-primary" />
                                </div>
                            </div>
                        </center>

                    </div>
                </form>


            </div>
            <!-- /.col-lg-9 -->

        </div>

    </div>
    <!-- /.container -->

</body>

</html>