@model WebApplication1.Models.Artigo
@{
    ViewBag.Title = "Alterar imagens";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<!DOCTYPE html>
<html>

<head>

    @section NotId {
        <li>
            <a href="@Url.Action("AluguerInfo", "Utilizador")">
                <span class="glyphicon glyphicon-bell "></span>
                Notificações
                @{
                    int n = (int)@ViewData["noti"];
                    if (n > 0)
                    {

                        <span class="badge" style="background-color: #138AB2">@n</span>
                    }
                }
            </a>
        </li>
    }

    <style>
        html * {
            font-family: Montserrat;
        }
    </style>
</head>
<body>
    <br />
    <br />
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4 col-sm-4 col-xs-12"></div>
            <div class="col-md-4 col-sm-4 col-xs-12">


                @if (@User.Identity.IsAuthenticated)
                {


                    @Html.ValidationSummary(true)
                    <form asp-action="AlteraImagem" asp-controllers="Utilizador" method="POST" enctype="multipart/form-data">


                        <!-- Nome input-->


                        <div class="form-group">
                            <center>
                                <label style="color:#555555; font-size:16px; font-weight:bold">Faça upload da(s) imagem(ns).</label>
                            </center>
                            <br />
                            <input type="file" id="file" name="file" class="form-control" multiple="multiple" style="border:none" />
                        </div>
                        <script>
                            document.getElementById("file").multiple = true;
                        </script>



                        <br />
                        <!-- Button (Double) -->
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="save"></label>
                            <div class="col-md-8">
                               <button id="save" name="save" class="btn btn-lg btn-primary btn-block btn-login text-uppercase font-weight-bold mb-2" style="background-color:#CCDBE2; border-color:#11709E; width: 100px; font-size:13px; color: #11709E; margin-left:-9px">Guardar</button>
                            </div>
                        </div>


                    </form>

                }
                <br />
                <center>
                    <a href='@Url.Action("VerArtigos", "Utilizador")' class="btn btn-lg btn-primary btn-block btn-login text-uppercase font-weight-bold mb-2" style="background-color:#CCDBE2; border-color:#11709E; display:inline-block; width: 100px; font-size:13px; color: #11709E">
                        Voltar
                    </a>
                </center>
                <br />
            </div>
            <div class="col-md-4 col-sm-4 col-xs-12"></div>
        </div>
    </div>
</body>
</html>






