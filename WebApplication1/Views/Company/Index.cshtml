@model WebApplication1.Models.SpecialIndexes

@{
    ViewBag.Title = "Página Inicial";
    Layout = "~/Views/Shared/_LayoutCompany.cshtml";
}

<head>
    <link href="~/css/StyleSheet.css" rel="stylesheet" type="text/css">
    <script src="~/js/charts/Chart.js"></script>
    <script src="~/js/charts/bar-chart.js"></script>

        @section NotId {
            <li>
                <a href="@Url.Action("AluguerPedidos", "Company")">
                    <span class="glyphicon glyphicon-bell "></span>
                    Notificações
                    @{
                        int n = (int)@ViewData["noti"];
                        if (n > 0)
                        {
                        <span class="badge" style="background-color: #138AB2">@n</span>
                            }
                        }
                </a>
            </li>
        }

</head>

<!-- Start Status area -->
<div class="notika-status-area">
    <div class="container" style="margin-top: 20px">
        <div class="row">
            <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12">
                <div class="wb-traffic-inner notika-shadow sm-res-mg-t-30 tb-res-mg-t-30">
                    <div class="website-traffic-ctn">
                        <h2><span class="counter">@Model.Artigo.Count()</span></h2>
                        <p>Total de Artigos</p>
                    </div>
                    <div class="sparkline-bar-stats1">9,4,8,6,5,6,4,8,3,5,9,5</div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12">
                <div class="wb-traffic-inner notika-shadow sm-res-mg-t-30 tb-res-mg-t-30">
                    <div class="website-traffic-ctn">
                        <h2>
                            <span class="counter">
                                @Model.Aluguer.Count()
                            </span>
                        </h2>
                        <p>Total de Alugueres</p>
                    </div>
                    <div class="sparkline-bar-stats2">1,4,8,3,5,6,4,8,3,3,9,5</div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12">
                <div class="wb-traffic-inner notika-shadow sm-res-mg-t-30 tb-res-mg-t-30 dk-res-mg-t-30">
                    <div class="website-traffic-ctn">
                        <h2>
                            <span class="counter">
                                @Model.Venda.Count()
                            </span>
                        </h2>
                        <p>Total de Vendas</p>
                    </div>
                    <div class="sparkline-bar-stats3">4,2,8,2,5,6,3,8,3,5,9,5</div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12">
                <div class="wb-traffic-inner notika-shadow sm-res-mg-t-30 tb-res-mg-t-30 dk-res-mg-t-30">
                    <div class="website-traffic-ctn">
                        <h2>
                            <span class="counter">
                                @Model.Denuncias.Count()
                            </span>
                        </h2>
                        <p>Total de Denúncias</p>
                    </div>
                    <div class="sparkline-bar-stats4">2,4,8,4,5,7,4,7,3,5,7,5</div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Status area-->
<!-- Start Sale Statistic area-->
<div class="sale-statistic-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-9 col-md-8 col-sm-7 col-xs-12">
                <div class="sale-statistic-inner notika-shadow mg-tb-30">
                    <div class="curved-inner-pro">
                        <div class="curved-ctn">
                            <h2>Estatisticas de Compras e Alugueres</h2>
                            <p>Representação ao longo do tempo</p>
                        </div>
                    </div>
                    <div id="line-chart" class="flot-chart flot-chart-sts"></div>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-5 col-xs-12">
                <div class="statistic-right-area notika-shadow mg-tb-30 sm-res-mg-t-0">
                    <div class="past-day-statis">
                        <h2>Na última Semana</h2>
                        <p>Estatísticas quando à presença no site.</p>
                    </div>
                    <div class="dash-widget-visits"></div>
                    <div class="past-statistic-an">
                        <div class="past-statistic-ctn">
                            <h3><span class="counter">3,000</span></h3>
                            <p>Visitas ao Site</p>
                        </div>
                        <div class="past-statistic-graph">
                            <div class="stats-bar"></div>
                        </div>
                    </div>
                    <div class="past-statistic-an">
                        <div class="past-statistic-ctn">
                            <h3><span class="counter">1,030,000</span></h3>
                            <p>Total de clicks</p>
                        </div>
                        <div class="past-statistic-graph">
                            <div class="stats-line"></div>
                        </div>
                    </div>
                    <div class="past-statistic-an">
                        <div class="past-statistic-ctn">
                            <h3><span class="counter"> 10 </span></h3>
                            <p>Número de Visitantes</p>
                        </div>
                        <div class="past-statistic-graph">
                            <div class="stats-bar-2"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Sale Statistic area-->
<!-- Start Email Statistic area-->
<div class="notika-email-post-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
                <div class="recent-post-wrapper notika-shadow sm-res-mg-t-30 tb-res-ds-n dk-res-ds">
                    <div class="recent-post-ctn">
                        <div class="recent-post-title">
                            <h2>Comentários Recentes</h2>
                        </div>
                    </div>
                    <div class="recent-post-items">
                        @foreach (var i in Model.Comentarios)
                        {
                            <div class="recent-post-signle rct-pt-mg-wp">
                                <a href="#">
                                    <div class="recent-post-flex">
                                        <div class="recent-post-it-ctn">
                                            <h2>@i.IdArtigo</h2>
                                            <p>@i.Descricao</p>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        }
                        <div class="recent-post-signle">
                            <a href="#">
                                <div class="recent-post-flex rc-ps-vw">
                                    <div class="recent-post-line rct-pt-mg">
                                        <p>Ver todas</p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
                <div class="recent-post-wrapper notika-shadow sm-res-mg-t-30 tb-res-ds-n dk-res-ds">
                    <div class="recent-post-ctn">
                        <div class="recent-post-title">
                            <h2>Denúncias Recentes</h2>
                        </div>
                    </div>
                    <div class="recent-post-items">
                        @foreach (var i in Model.Denuncias)
                        {
                            <div class="recent-post-signle rct-pt-mg-wp">
                                <a href="#">
                                    <div class="recent-post-flex">
                                        <div class="recent-post-it-ctn">
                                            <h2>@i.IdAutor</h2>
                                            <p>@i.Descricao</p>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        }
                        <div class="recent-post-signle">
                            <a href="#">
                                <div class="recent-post-flex rc-ps-vw">
                                    <div class="recent-post-line rct-pt-mg">
                                        <p>Ver todas</p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
                <div class="recent-items-wp notika-shadow sm-res-mg-t-30">
                    <div class="rc-it-ltd">
                        <div class="recent-items-ctn">
                            <div class="recent-items-title">
                                <h2>Artigos Mais Vendidos</h2>
                            </div>
                        </div>
                        <div class="recent-items-inn">
                            <table class="table table-inner table-vmiddle">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Nome</th>
                                        <th style="width: 60px">Preco</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var Item in Model.Artigo)
                                    {
                                        <tr>
                                            <td class="f-500 c-cyan">@Item.IdArtigo</td>
                                            <td>@Item.Nome</td>
                                            <td class="f-500 c-cyan">@Item.Preco €</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div id="recent-items-chart" class="flot-chart-items flot-chart vt-ct-it tb-rc-it-res"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Email Statistic area-->
