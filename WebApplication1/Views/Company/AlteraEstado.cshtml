@model WebApplication1.Models.Artigo
@{
    ViewBag.Title = "Alterar estado";
    Layout = "~/Views/Shared/_LayoutCompany.cshtml";
}
<!DOCTYPE html>
<html>

<head>

    @section NotId {
        <li>
            <a href="@Url.Action("AluguerPedidos", "Company")">
                <span class="glyphicon glyphicon-bell "></span>
                Notificações
                @{
                    int n = (int)@ViewData["noti"];
                    if (n > 0)
                    {

                        <span class="badge" style="background-color: #138AB2">@n</span>
                    }
                }
            </a>
        </li>
    }
    <style>
        html * {
            font-family: Montserrat;
        }
    </style>

</head>
<body>
    <br />
    <br />
    <div style="margin:auto">
        <div style="margin:auto">
            <div>
            <div>


                @{ using (Html.BeginForm("AlteraEstado", "Company", FormMethod.Post))
                    {

                        @Html.ValidationSummary(true)
                        <form>


                            <!-- Nome input-->
                            <div>
                                <div>
                                    <center>
                                        <label for="Estado" style="color:#555555; font-size:16px; font-weight:bold;">Insira o estado</label>
                                        <p style="color:#555555; font-size:14px;">(coloque um certo se pretende que se encontre disponível)</p>
                                    </center>
                                    <br />
                                    <form action="/action_page.php">
                                        <center>
                                            <input type="checkbox" id="Estado" name="Estado" value="1">
                                            <br />
                                            <br />
                                            <button type="submit" value="Guardar" id="save" name="save" class="btn btn-lg btn-primary btn-block btn-login text-uppercase font-weight-bold mb-2" style="background-color:#CCDBE2; border-color:#11709E; width: 100px; font-size:13px; color: #11709E;">Guardar</button>
                                        </center>
                                    </form>
                                </div>
                            </div>

                        </form>
                    }
                }
                <center>
                    <a href='@Url.Action("Cat", "Company")' class="btn btn-lg btn-primary btn-block btn-login text-uppercase font-weight-bold mb-2" style="background-color:#CCDBE2; border-color:#11709E; display:inline-block; width: 100px; font-size:13px; color: #11709E">
                        Voltar
                    </a>
                </center>
                <br />
            </div>
            <div class="col-md-4 col-sm-4 col-xs-12"></div>
        </div>
    </div>
 </div>
</body>
</html>








