                        <div class="form-group">
                            <div>
                                <label for="Email"></label>
                                <input type="hidden" name="email" value="@item.IdArtigo" />
                            </div>
                            <div>
                                <button type="submit" id="buttonEmail" class="btn btn-lg btn-primary btn-block btn-login text-uppercase font-weight-bold mb-2">Warning</button>
                            </div>


                    </form>

                    <form asp-action="Bloquear" asp-controllers="Admin" method="get" enctype="multipart/form-data">
