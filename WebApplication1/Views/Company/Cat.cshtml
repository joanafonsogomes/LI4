                                <input type="hidden" name="email" value="@item.IdArtigo" />
                            </div>
                            <div>
                                <button type="submit" id="buttonEmail" class="btn btn-lg btn-primary btn-block btn-login text-uppercase font-weight-bold mb-2">Eliminar</button>
                            </div>
