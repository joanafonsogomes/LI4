@model WebApplication1.Models.Utilizador
@{
    ViewBag.Title = "Registar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html>

<head>
    <style>
        html * {
            font-family: Montserrat;
        }
    </style>
</head>
<body>
    <br />
    <br />


    <div class="container">
        <div class="row">
            <div class="col-lg-10 col-xl-9 mx-auto">
                <div class="card card-signin flex-row my-9">
                    <div class="card-img-left d-none d-md-flex">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title text-center" style="font-weight:bold; font-size:20px">Registo</h5>
                        <h5 class="card-title text-center" style="font-weight:bold ; text-shadow: 2px 2px 8px #212529;">Após o registo ganha um voucher de 5€!</h5>

                        @if (!@User.Identity.IsAuthenticated)
                        {
                            using (Html.BeginForm("AdicionarCliente", "Home", FormMethod.Post))
                            {

                                @Html.ValidationSummary(true)

                                <form class="form-signin">

                                    <div class="form-label-group">
                                        <input type="text" id="Email" name="Email" class="form-control" placeholder="Email" required>
                                        <label for="Email">Email</label>
                                    </div>
                                    <div class="form-label-group">
                                        <input type="text" name="Cc" id="Cc" class="form-control" placeholder="Cartão de Cidadão" required>
                                        <label for="Cc"> CC</label>
                                    </div>
                                    <div class="form-label-group">
                                        <input type="text" id="Nome" name="nome" class="form-control" placeholder="Nome" required>
                                        <label for="Nome">Nome</label>
                                    </div>
                                    <div class="form-label-group">
                                        <input id="Password" name="Password" type="password" placeholder="Password" class="form-control" required>
                                        <label for="Password">Password</label>
                                    </div>
                                    <div class="form-label-group">
                                        <input id="ContaBancaria" name="ContaBancaria" type="text" placeholder="Conta Bancaria" class="form-control" required>
                                        <label for="ContaBancaria">Conta Bancária</label>
                                    </div>
                                    <!-- tipo input-->
                                    <div class="form-label-group">
                                        <input id="Tipo" name="Tipo" type="text" placeholder="Tipo (single/company)" class="form-control" required>
                                        <label for="Tipo">Tipo (single/company)</label>
                                    </div>

                                    <!-- Text input-->
                                    <div class="form-label-group">
                                        <input id="Telemovel" name="Telemovel" type="text" placeholder="Telemovel" class="form-control" required>
                                        <label for="Telemovel">Telemovel</label>
                                    </div>
                                    <!-- Text input-->
                                    <div class="form-label-group">
                                        <input id="Rua" name="Rua" type="text" placeholder="Rua" class="form-control" required>
                                        <label for="Rua">Rua</label>
                                    </div>

                                    <!-- Text input-->
                                    <div class="form-label-group">
                                        <input id="NPorta" name="NPorta" type="text" placeholder="Numero da Porta" class="form-control" required>
                                        <label for="NPorta">Número da porta</label>
                                    </div>

                                    <!-- Codigo Postal input-->
                                    <div class="form-label-group">
                                        <input id="CodPostal" name="CodPostal" type="text" placeholder="Codigo Postal" class="form-control" required>
                                        <label for="CodPostal">Código Postal</label>
                                    </div>

                                    <!-- Codigo Postal input-->
                                    <div class="form-label-group">
                                        <input id="CodigoPostal" name="CodigoPostal" type="text" placeholder="Codigo Postal" class="form-control" required>
                                        <label for="CodigoPostal">Confirme Código Postal</label>
                                    </div>

                                    <!-- Text input-->
                                    <div class="form-label-group">
                                        <input id="Freguesia" name="Freguesia" type="text" placeholder="Freguesia" class="form-control" required>
                                        <label for="Freguesia">Freguesia</label>
                                    </div>

                                    <!-- Text input-->
                                    <div class="form-label-group">
                                        <input id="Distrito" name="Distrito" type="text" placeholder="Distrito" class="form-control" required>
                                        <label for="Distrito">Distrito</label>
                                    </div>

                                    <hr>
                                    <button class="btn btn-lg btn-primary btn-block text-uppercase" id="save" name="save">Registar</button>
                                    <a class="d-block text-center mt-2 small" href="@Url.Action("Login", "Conta")">Login</a>
                                    <hr class="my-4">
                                    <button class="btn btn-lg btn-google btn-block text-uppercase" type="submit"><i class="fab fa-google mr-2"></i> Registar com Google</button>
                                    <button class="btn btn-lg btn-facebook btn-block text-uppercase" type="submit"><i class="fab fa-facebook-f mr-2"></i> Registar com Facebook</button>
                                </form>

                            }
                        }

                    </div>
                </div>
            </div>
        </div>
</body>

</html>

