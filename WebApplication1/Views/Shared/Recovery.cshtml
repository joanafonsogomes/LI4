@model WebApplication1.Models.Utilizador
@{
    ViewBag.Title = "Enviar email com nova password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>

<head>
    <style>
        html * {
            font-family: Montserrat;
        }
    </style>
</head>
<body>
    <br />
    <br />
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4 col-sm-4 col-xs-12"></div>
            <div class="col-md-4 col-sm-4 col-xs-12">


                @if (!@User.Identity.IsAuthenticated)
                {
                    using (Html.BeginForm("Recovery", "Conta", FormMethod.Post))
                    {

                        @Html.ValidationSummary(true)
                        <form>


                            <!-- Text input-->
                            <div>
                                <center>
                                    <label for="code">Insira aqui o código de recuperação</label>
                                </center>
                                <div>
                                    <input id="code" name="code" type="text" placeholder="" class="form-control input-md" required="">

                                </div>
                            </div>
                            <div>
                                <center>
                                    <label for="pass">Insira a sua nova password</label>
                                </center>
                                <div>
                                    <input type="password" id="pass" name="pass" placeholder="" class="form-control input-md" required="">

                                </div>
                            </div>
                            <div>
                                <center>
                                    <label for="pa">Insira a sua nova password</label>
                                </center>
                                <div>
                                    <input type="password" id="pa" name="pa" placeholder="" class="form-control input-md" required="">

                                </div>
                            </div>

                            <!-- Button (Double) -->
                            <div class="form-group">
                                <label class="col-md-4 control-label" for="save"></label>
                                <div class="col-md-8">
                                    <button id="save" name="save" class="btn btn-lg btn-primary btn-block btn-login text-uppercase font-weight-bold mb-2" style="background-color:#CCDBE2; border-color:#11709E; width: fit-content; font-size:13px; color: #11709E;">Recuperar</button>
                                </div>
                            </div>
                        </form>
                    }
                }
                &nbsp;
                <br />
                <center>
                    <a href='@Url.Action("Login", "Conta")' class="btn btn-lg btn-primary btn-block btn-login text-uppercase font-weight-bold mb-2" style="background-color:#CCDBE2; border-color:#11709E; width: fit-content; font-size:13px; color: #11709E;">
                        Voltar
                    </a>
                </center>
            </div>
            <div class="col-md-4 col-sm-4 col-xs-12"></div>
        </div>
    </div>
</body>
</html>
