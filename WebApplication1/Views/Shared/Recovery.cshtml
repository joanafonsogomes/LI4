@model WebApplication1.Models.Utilizador
@{
    ViewBag.Title = "Enviar email com nova password";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<!DOCTYPE html>
<html>

<head>
    <title>Enviar Email</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/style.css" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans|Oswald" rel="stylesheet">
    <link rel="icon" href="~/icon.ico">
</head>
<body>
    <br />
    <br />
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4 col-sm-4 col-xs-12"></div>
            <div class="col-md-4 col-sm-4 col-xs-12">


                @if (!@User.Identity.IsAuthenticated)
                {
                    using (Html.BeginForm("Recovery", "Conta", FormMethod.Post))
                    {

                        @Html.ValidationSummary(true)
                <form>


                    <!-- Text input-->
                    <div>
                        <label for="code">Insira aqui o código de recuperação</label>
                        <div>
                            <input id="code" name="code" type="text" placeholder="" class="form-control input-md" required="">

                        </div>
                    </div>
                    <div>
                        <label for="pass">Insira a sua nova password</label>
                        <div>
                            <input id="pass" name="pass" type="text" placeholder="" class="form-control input-md" required="">

                        </div>
                    </div>
                    <div>
                        <label for="pa">Insira a sua nova password</label>
                        <div>
                            <input id="pa" name="pa" type="text" placeholder="" class="form-control input-md" required="">

                        </div>
                    </div>

                    <!-- Button (Double) -->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="save"></label>
                        <div class="col-md-8">
                            <button id="save" name="save" class="btn btn-default">Recuperar</button>
                        </div>
                    </div>


                </form>
                    }
                }
                <div>
                    @Html.ActionLink("Voltar", "VerInfo")
                </div>
            </div>
            <div class="col-md-4 col-sm-4 col-xs-12"></div>
        </div>
    </div>
</body>
</html>
